@page "/themes"
@inject IJSRuntime JS
@rendermode InteractiveWebAssembly
<PageTitle>Themes</PageTitle>
<div class="mt-5">
    <h1 class="text-center">Built in themes for future projects</h1>
    <div class ="d-flex flex-wrap gap-3 align-items-center justify-content-center my-3">
        @foreach(string theme in siteThemes)
        {
            <div class="card" data-gd-theme="@theme">
                <div class="card-body">
                    <h3 class="card-title d-flex align-items-center">
                        Theme:&nbsp;<span style="color: var(--gd-theme-core)">@theme</span>
                        <button class="ms-auto btn btn-sm btn-primary" @onclick="()=>ChangeTheme(theme)">Set Theme</button>
                    </h3>
                    <h6 class="small fw-bold mt-3">Palette</h6>
                    <div class="d-flex gap-0 align-items-center">
                        @foreach(string weight in Weights)
                        {
                            <div style="background-color: var(--gd-theme-@weight); width:16px; height: 16px;"></div>

                        }
                    </div>
                    <div class="my-3">
                        <button class="btn btn-primary m-2">Primary Button</button>
                        <button class="btn btn-light m-2">Light Button</button>
                        <button class="btn btn-dark m-2">Dark Button</button>
                    </div>
                    <div>
                        Text with a <a href="#">clickable link</a> in the middle.
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    public async Task ChangeTheme(string theme)
    {
        //setTheme is defined in index.html
        await JS.InvokeVoidAsync("setTheme", theme);
    }


    List<string> siteThemes = new()
    {
        "code-magic", // Indexed 0-11
        "blue",
        "indigo",
        "purple",
        "pink",
        "red",
        "orange",
        "yellow",
        "green",
        "teal",
        "cyan",
        "gray"
    };

    List<string> Weights = new()
    {
        "core", // Indexed 0-11
        "100",
        "150",
        "200",
        "300",
        "400",
        "500",
        "600",
        "700",
        "800",
        "850",
        "900"
    };
}
